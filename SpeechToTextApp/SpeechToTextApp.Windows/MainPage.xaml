<Page
    x:Class="SpeechToTextApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
       
        <StackPanel >
            <StackPanel Orientation="Horizontal">
                <Button Content="Start" Click="SpeakButton_Click"
                AutomationProperties.Name="Speak"
                HorizontalAlignment="Left" Margin="113,126,0,0" VerticalAlignment="Top"/>

                <Button Content="Stop" Click="StopListeningButton_OnClick"
                AutomationProperties.Name="Speak"
                HorizontalAlignment="Left" Margin="113,126,0,0" VerticalAlignment="Top"/>
            </StackPanel>
        
            <TextBlock x:Name="ResultText"
                       Margin="113,56,0,0"
                       FontSize="16"></TextBlock>

            <TextBlock x:Name="Status"
                       FontSize="14"
                       Margin="113,56,0,0"></TextBlock>
        </StackPanel>

    </Grid>

</Page>
